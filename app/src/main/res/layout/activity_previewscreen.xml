<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Young_Grey4"
    tools:context=".Previewscreen">

    <include layout="@layout/progressicon"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="37dp"
        android:text="Image Preview"
        android:textAlignment="center"
        android:textColor="@color/Young_Black"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/preview_imagescreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/preview_imagescreen"
        android:layout_width="279dp"
        android:layout_height="315dp"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/photoUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="@+id/preview_imagescreen"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/preview_imagescreen"
        app:layout_constraintTop_toBottomOf="@+id/preview_imagescreen"
        android:onClick="uploadfile"

        />
</androidx.constraintlayout.widget.ConstraintLayout>